<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Edit <%= blog.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/blog/<%=blog._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="name" id="name" value="<%= blog.name %>">
                </div>
                <div class="form-group">
                    <label for="image">Image Url</label>
                    <input class="form-control" type="text" name="image" id="image" placeholder="Please " value="<%= blog.image %>" required>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
					<textarea style="resize:none; height:200px; width:100%" class="form-control" name="description" id="description"><%= blog.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update!</button>
                </div>
            </form>
            <a href="/blog">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>

